<h1>Login</h1>

<p>Welcome to our Secret Santa app!</p>
<p>To see your Swaps and Wishlist, please sign in.</p>

<%= form_tag authenticate_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag :login %>
  </p>

  <p>Don't have an account? </p>
    <%= link_to '<button type="button">Join Us</button>'.html_safe, new_user_path %>
<% end %>
