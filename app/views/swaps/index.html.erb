<p id="notice"><%= notice %></p>

<h1>Listing Swaps</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>When</th>
      <th>Swap description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @swaps.each do |swap| %>
      <tr>
        <td><%= swap.location %></td>
        <td><%= swap.when %></td>
        <td><%= swap.swap_description %></td>
        <td><%= link_to 'Show', swap %></td>
        <td><%= link_to 'Edit', edit_swap_path(swap) %></td>
        <td><%= link_to 'Destroy', swap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Swap', new_swap_path %>
